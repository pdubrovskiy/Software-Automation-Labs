{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["jest", "selenium-webdriver", "node"]
  },
  "include": [
    "src/**/*",
    "level_1/utils",
    "level_1/tests",
    "level_1/test-setup.ts"
  ],
  "exclude": ["node_modules"]
}
